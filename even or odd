#include <iostream>

using namespace std;

int main() {

    int number;

    cout << "Enter an integer : ";
    cin >> number;

    if (number % 2 == 0) {
        cout << endl << number << " is even number.";
        cout<<"\nnext even number is : "<<number+2;
    } else {
        cout << endl << number << " is odd number.";
        cout<<"\nprevious odd number is : "<<number-2;
    }

    return 0;
}
